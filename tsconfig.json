
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,  // Changed from true to false to avoid red squiggles for unused variables
    "noUnusedParameters": false, // Changed from true to false
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true  // Added this line (was possibly missing)
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}